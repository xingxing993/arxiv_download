{
    "manifest_version": 3,
    "name": "arXiv PDF Downloader",
    "version": "1.0",
    "description": "Download PDFs from arXiv with customizable filenames",
    "permissions": [
        "activeTab",
        "downloads",
        "scripting"
    ],
    "host_permissions": [
        "https://arxiv.org/*",
        "http://export.arxiv.org/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "arxiv_download.png"
        }
    },
    "icons": {
        "48": "arxiv_download.png"
    }
}